@model LoginModel
@{
}

<section class="wrapper">
    <div class="form signup">
        <header>Demo</header>
        <form id="account-register" asp-action="Register" method="post">
            <h4 class="text-center align-content-center">Here you can create a new account</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Email">Email</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Password">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-warning">Demo</button>
        </form>
    </div>
    <div class="form login">
        <header>Login</header>
        <form id="account-login" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 text-black">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com"/>
                <label asp-for="Email" class="form-label">Email Address <i style="display: inline-flex" class="fa-solid fa-envelope"></i></label>
                <span asp-validation-for="Email" class="text-danger"></span>
               
            </div>
            <div class="form-floating mb-3 text-black">
                <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password"/>
                <label asp-for="Password" class="form-label">Password <i class="fa-solid fa-key"></i> </label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="checkbox mb-3 justify-content">
                        <label asp-for="RememberMe" class="form-label" style="color: black">
                            <input class="form-check-input" asp-for="RememberMe"/>
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="col-md-6">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Login</button>
                </div>
            </div>
        </form>
        <div class="mt-2">
            <div>
                <a class="w-100 btn btn-lg btn-warning" asp-controller="Account" asp-action="Register"> Register </a>
                <p class="mt-1 text-center align-content-center">If you do not have an account, you can register above.</p>
            </div>
        </div>
    </div>
    <script>
        const wrapper = document.querySelector(".wrapper"),
          signupHeader = document.querySelector(".signup header"),
          loginHeader = document.querySelector(".login header");
        loginHeader.addEventListener("click", () => {
          wrapper.classList.add("active");
        });
        signupHeader.addEventListener("click", () => {
          wrapper.classList.remove("active");
        });
      </script>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}