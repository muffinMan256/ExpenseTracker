@model IEnumerable<TransactionModel>

@*Button*@
<div class="row my-4">
    <div class="col-md-12 d-flex justify-content-end">
        <form asp-action="Create" method="post">
            <button class="btn btn-warning mt-2"><i class="fa-solid fa-square-plus"></i>&nbsp;New Transaction</button>
        </form>
    </div>
</div>

@*Data Grid*@
<div class="row mt-2">
    <div class="col-md-12">
        <div class="table-responsive-sm">
            <table class="table table-bordered table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th class="text-center">Category</th>
                        <th class="text-center">Date</th>
                        <th class="text-center">Amount</th>
                        <th class="text-center">Note</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.CategoryTitleWithIcon)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.FormattedAmount)
                            </td>
                            <td class="text-center">
                                @Html.DisplayFor(modelItem => item.Note)
                            </td>
                            <td class="text-center">
                                <form asp-action="Delete" method="post" asp-route-id="@item.TransactionId">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-link no-a-decoration" onClick="return confirm('Do you want to delete this record?')">
                                        <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
                                    </button>
                                </form>
                                <form asp-action="Edit" method="post" asp-route-id="@item.TransactionId">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-link no-a-decoration">
                                        <i class="fa-solid fa-pen fa-lg text-warning"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
