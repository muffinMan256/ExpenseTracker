@model IEnumerable<ExpenseTracker.Models.TransactionModel>


<h2>@ViewBag.Message</h2>

@*Button*@
<div class="row my-4">
    <div class="col-md-12 d-flex justify-content-end">
        <form asp-action="Create" method="get">
            <button class="btn btn-warning mt-2"><i class="fa-solid fa-square-plus"></i>&nbsp;New Transaction</button>
        </form>
    </div>
</div>


@*Data Grid*@
<div class="row mt-2">
    <div class="col-md-12">
        <div class="table-responsive-sm">
            <table class="table table-bordered table-hover" style="width:100%">
                <thead>
                <tr>
                    <th class="text-center">Category</th>
                    <th class="text-center">Amount</th>
                    <th class="text-center">Note</th>
                    <th class="text-center">Date</th>
                    <th class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var transaction in Model)
                    {
                        <tr>
                            <td class="text-center">@transaction.CategoryId</td>
                            <td class="text-center">@transaction.Amount</td>
                            <td class="text-center">@transaction.Note</td>
                            <td class="text-center">@transaction.Date.ToShortDateString()</td>
                            <td class="text-center">
                                <form asp-action="Delete" asp-controller="Transactions" method="post" id="deleteForm">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@transaction.TransactionId" />
                                    <button type="submit" class="btn btn-danger mt-2" id="deleteButton">
                                        <i class="fa-solid fa-trash-can"></i> &nbsp;Delete
                                    </button>
                                </form>
                                <a asp-action="Edit" asp-route-id="@transaction.TransactionId">
                                    <button type="button" class="btn btn-warning mt-2">
                                        <i class="fa-solid fa-pen"></i> &nbsp;Edit
                                    </button>
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No transactions available.</td>
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const button = document.getElementById('deleteButton');
        const form = document.getElementById('deleteForm');

        button.addEventListener('click', function (event) {
            event.preventDefault();
            console.log('Delete button clicked');

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    console.log('User confirmed deletion');
                    form.submit();
                } else {
                    console.log('User cancelled deletion');
                }
            }).catch((error) => {
                console.error('SweetAlert2 error:', error);
            });
        });
    });
</script>