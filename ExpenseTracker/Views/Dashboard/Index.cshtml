@*Admin*@
@if (User.IsInRole("Admin"))
{
    @*Data Grid*@
    <div class="container">
        <div class="row justify-content-center mb-2">
            <h2 class="text-center">Admin Dashboard</h2>
        </div>
        <div class="row justify-content-start">
            <h4>Users Dashboard</h4>
        </div>
    </div>


    <div class="row mt-2">
        <div class="col-md-12">
            <div class="table-responsive-sm">
                <table class="table table-bordered table-hover" style="width:100%">
                    <thead>
                    <tr>
                        <th class="text-center">Username</th>
                        <th class="text-center">Email</th>
                        <th class="text-center">First Name</th>
                        <th class="text-center">Last Name</th>
                        <th class="text-center">Birthday</th>
                        <th class="text-center w-25">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="text-center">@item.UserName</td>
                            <td class="text-center">@item.Email</td>
                            <td class="text-center">@item.FirstName</td>
                            <td class="text-center">@item.LastName</td>
                            <td class="text-center">@item.Birthday</td>
                            <td class="text-center">
                                @* <div class="form-check form-switch">
                                        <input min="0" max="1" id="myRange" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                                    <label class="form-check-label" for="flexSwitchCheckChecked">Checked switch checkbox input</label>
                                    <span id="sliderValue">@item.LockoutEnabled</span>
                                </div>
                                <div class="slidecontainer">
                                    <input type="range" min="0" max="1" value="@item.LockoutEnabled" class="slider" id="myRange" step="1">
                                </div> *@
                                <span id="sliderValue">@item.LockoutEnabled</span>
                            </td>      
                            <td class="text-center">
                                    <form asp-controller="Admin" asp-action="DeleteUser" method="post" asp-route-id="@item.Id">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-link no-a-decoration" onClick="return confirm('Do you want to delete this record?')">
                                            <i class="fa-solid fa-trash-can fa-lg text-danger"></i>
                                        </button>
                                    </form>
                                    <form asp-controller="Admin" asp-action="UpdateUser">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-sm btn-link no-a-decoration">
                                            <i class="fa-solid fa-pen"></i>
                                        </button>
                                    </form>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script>
        var slider = document.getElementById("myRange");
        var output = document.getElementById("sliderValue");

        function updateSliderValue() {
            var value = slider.value;
            output.innerHTML = value == 1 ? 'User is not locked' : 'User is locked';
            output.style.color = value == 1 ? 'green' : 'red';
        }

        // Display the default slider value
        updateSliderValue();

        // Update the slider value and style when the slider handle is dragged
        slider.oninput = function () {
            updateSliderValue();
        }

        // Update the slider value and style when the slider value is changed
        slider.onchange = function () {
            updateSliderValue();
        }


        $('.switchItem input[type="checkbox"]').on('change'), function(){
            alert("Hello checkbox");
        }

    </script>
}
